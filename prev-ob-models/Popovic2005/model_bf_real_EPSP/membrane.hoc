proc set_membrane() { local Rms
  Cms = $1
  Rms = $2
  Raxial = $3
  forall {
      insert pas
      e_pas = Erest
      g_pas = 1/(Rms)
      Ra = Raxial
      cm = Cms
  }
}
set_membrane(1.18,9600,54)

